* > *
  box-sizing: border-box;

global-reset();

html
  height: 100%;
  width: 100%;

body
  font-family: font-family-standard;
  font-size: font-size-standard;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  color: text-default;
  height: 100%;
  width: 100%;
  margin: 0;
  padding: 0;
  background-color: #fff;

for h in (1 .. 6)
  h{h}
    line-height: 1.15;
    font-size: lookup('font-size-h' + h);
    font-weight: 800;
    color: color-heading;

h1
  letter-spacing: -1.6px;

.headline
  font-size: 64px;

::selection
  color: #fff;
  background-color: lighten(primary-color, 30%);

a
  color: color-primary;
  text-decoration: none;
  cursor: pointer;

  &:hover
    color: darken(color-primary, 10%);

li > a
  &:hover
    text-decoration: none;

p
  line-height: 1.35;
  color: text-default;

b, strong, .strong
  font-weight: 500;

small
  line-height: 1.65;
  font-size: font-size-small;

  &.muted
    color: text-disabled;
