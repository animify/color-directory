.featured
    display: flex;
    flex-direction: row;
    width: 100%;
    position: relative;
    margin: 100px 0 24px;

    .lbl
        margin-left: 28px;
        font-size: 12px;
        text-transform: uppercase;
        font-weight: 800;
        letter-spacing: 2.4px;
        absolute: top 64px left;
        color: #000;

        &:before
            width: 16px;
            border-bottom: 1px solid #000;
            content: ' ';
            height: 1px;
            absolute: top 4px left -28px;

    .info
        display: flex;
        align-items: center;
        width: 50%;
        position: relative;
        height: 560px;

        .desc
            padding: 64px 48px 0 0;

        h1
            color: #000;
            font-weight: 800;
            letter-spacing: -2.4px;
            margin: 6px 0 32px;

    .image
        width: 50%;
        display: flex;
        flex-direction: column;

    .authors
        background-color: #000;
        padding: 10px;
        color: #fff;
        font-weight: 600;
        font-size: 14px;
        width: fit-content;
        absolute: bottom 48px right 48px;

    .colors
        display: flex;
        flex-direction: row;
        width: 100%;

        .color
            width: 84px;
            height: 84px;
            border-radius: 50%;
            content: ' ';
            flex-shrink: 1;
            flex-grow: 0;

            + .color
                margin-left: -20px;

    .preview
        height: 100%;
        width: 100%;
        background-size: cover;
        background-repeat: no-repeat;
        border-radius: 8px;
        box-shadow: rgba(0, 0, 0, .16) 0 4px 12px;
