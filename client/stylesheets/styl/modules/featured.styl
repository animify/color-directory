.featured
    display: flex;
    flex-direction: row;
    width: 100%;
    position: relative;
    margin-top: 112px;

    .lbl
        margin-left: 28px;
        font-size: 12px;
        text-transform: uppercase;
        font-weight: 800;
        letter-spacing: 2.4px;
        absolute: top 100px left;
        color: #000;

        &:before
            width: 16px;
            border-bottom: 1px solid #000;
            content: ' ';
            height: 1px;
            absolute: top 4px left -28px;

    .info
        display: flex;
        align-items: center;
        width: 50%;
        position: relative;
        height: 560px;

        .desc
            padding: 100px 48px 0 0;

        h1
            color: #000;
            font-weight: 800;
            letter-spacing: -2.4px;

    .image
        width: 50%;
        display: flex;
        flex-direction: column;

    .authors
        background-color: #000;
        padding: 10px;
        color: #fff;
        font-weight: 600;
        font-size: 14px;
        width: fit-content;

    .colors
        display: flex;
        flex-direction: row;
        width: 100%;
        height: 64px;

        .color
            width: 20%;
            height: 100%;
            content: ' ';
            flex-shrink: 1;
            flex-grow: 0;

    .preview
        height: 100%;
        width: 100%;
        background-size: cover;
        background-repeat: no-repeat;
