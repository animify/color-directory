nav
    display: flex;
    background-color: #000;
    fixed: top left;
    width: 100%;
    justify-content: space-between;
    padding: 12px 32px;
    align-items: center;
    z-index: 2000;

    a
        color: #fff;
        font-weight: 600;

    & > *
        display: flex;
        justify-content: space-between;
        align-items: center;

h5 a
    color: inherit;

.featured
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 640px;
    margin-bottom: 40px;

    small.label
        background-color: #000;
        color: #fff;
        padding: 12px 16px;
        margin-bottom: 16px;
        width: -moz-max-content;
        width: fit-content;
        display: flex;
        font-weight: 800;
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 1.2px;
        align-items: center;
        line-height: 1;

    .preview
        display: flex;
        flex-direction: column;
        background-size: cover;
        background-position: center center;
        content: ' ';
        align-items: center;
        height: 100%;
        width: 100%;
        position: relative;

    .description
        absolute: bottom 24px left 24px;

    .title, .owners
        background-color: #fff;
        color: #000;
        padding: 12px 16px;
        margin-top: 16px;
        width: -moz-max-content;
        width: fit-content;

.projects
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-gap: 36px;
    width: 100%;

    img.preview
        width: 100%;

    .item, .description
        position: relative;

    .item
        font-size: 0;

    .meta
        width: 100%;
        padding: 16px;
        absolute: bottom left;

    .title, .owners
        background-color: #fff;
        padding: 8px 16px;
        width: -moz-max-content;
        width: fit-content;
        display: flex;
        font-size: 10px;
        font-weight: 500;
        align-items: center;
        max-width: 90%;
        color: #000;
        letter-spacing: .4px;

        a, p
            width: 100%;
            overflow: ellipsis;
            color: #000;

    .owners
        margin-top: -16px;

    .title
        font-weight: 800;
        padding: 12px 16px;
        font-size: 11px;
        text-transform: uppercase;
        letter-spacing: 1.2px;

    .colors
        display: flex;

    .color
        cursor: pointer;
        flex-grow: 1;

        &::before
            margin-top: .9rem !important;

        &::after
            margin-top: 1.1rem !important;

        p
            padding: .5rem 0;
            display: none;

        span
            content: ' ';
            position: relative;
            width: 100%;
            height: 20px;
            display: block;
            margin: 0 auto;
            transition: border-color 140ms ease, transform 140ms ease;
            will-change: border-color;
            padding: 0 .5rem;
            transform-origin: center center;

        &:hover
            span
                transform: scale(1.15);
                z-index: 1000;
